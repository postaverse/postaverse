{
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    },
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "description": "The Postaverse social media platform.",
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "keywords": [
    "laravel",
    "social",
    "media",
    "platform",
    "postaverse"
  ],
  "license": "MIT",
  "minimum-stability": "stable",
  "name": "postaverse/postaverse",
  "prefer-stable": true,
  "require": {
    "erusev/parsedown": "^1.7",
    "joelbutcher/socialstream": "^6.3",
    "laravel/framework": "^v12.19.3",
    "laravel/jetstream": "^v5.3.7",
    "laravel/pulse": "^v1.4.2",
    "laravel/sanctum": "^4.1",
    "laravel/tinker": "^2.10",
    "league/flysystem-aws-s3-v3": "^3.29",
    "livewire/livewire": "^3.6",
    "php": "^8.4",
    "resend/resend-laravel": "^v0.22.0",
    "socialiteproviders/discord": "^4.2",
    "socialiteproviders/reddit": "^4.1"
  },
  "require-dev": {
    "fakerphp/faker": "^1.24",
    "itsgoingd/clockwork": "^5.3",
    "laravel/pint": "^v1.22.1",
    "laravel/sail": "^v1.43.1",
    "mockery/mockery": "^1.6.12",
    "nunomaduro/collision": "^v8.8.1",
    "phpunit/phpunit": "^12.2.3",
    "spatie/laravel-ignition": "^2.4"
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ]
  },
  "type": "project"
}